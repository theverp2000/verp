<?xml version="1.0" encoding="utf-8"?>
<verp noupdate="1">
    <record id="irCronRatingProject" model="ir.cron">
        <field name="label">Project: Send rating</field>
        <field name="modelId" ref="project.model_projectProject"/>
        <field name="state">code</field>
        <field name="code">model._sendRatingAll()</field>
        <field name="intervalType">days</field>
        <field name="numbercall">-1</field>
    </record>

    <record id="irCronRecurringTasks" model="ir.cron">
        <field name="label">Project: Create Recurring Tasks</field>
        <field name="modelId" ref="project.model_projectTaskRecurrence"/>
        <field name="state">code</field>
        <field name="code">model._cronCreateRecurringTasks()</field>
        <field name="intervalType">days</field>
        <field name="numbercall">-1</field>
        <field name="nextcall" eval="toFormat(addDate(setDate(now(), {hour: 3, minute: 0}), {days: 1}), 'yyyy-MM-dd HH:mm:ss')" />
    </record>
</verp>
