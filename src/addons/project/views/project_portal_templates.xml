<?xml version="1.0" encoding="utf-8"?>
<verp>
    <template id="portalLayout" name="Portal layout: project menu entry" inheritId="portal.portalBreadcrumbs" priority="40">
        <xpath expr="//ol[contains(@class, 'o-portal-submenu')]" position="inside">
            <li t-if="pageName == 'project' || project" class="col-lg-2" t-attf-class="breadcrumb-item #{!bool(project) ? 'active ' : ''}">
                <a t-if="project" t-attf-href="/my/projects?{{ keepQuery() }}">Projects</a>
                <t t-else="">Projects</t>
            </li>
            <li t-if="pageName == 'projectTask' &amp;&amp; bool(project)" class="breadcrumb-item active">
                <a t-if="project" t-attf-href="/my/project/{{ project.id }}?{{ keepQuery() }}"><t t-esc="await project.label"/></a>
            </li>
            <li t-elif="project" t-attf-class="breadcrumb-item #{!bool(project) ? 'active ' : ''} text-truncate col-8 col-lg-10">
                <t t-esc="await project.label"/>
            </li>
            <li t-if="pageName == 'task' || (bool(task) &amp;&amp; !bool(project))" t-attf-class="breadcrumb-item #{!bool(task) ? 'active ' : ''}">
                <a t-if="task" t-attf-href="/my/tasks?{{ keepQuery() }}">Tasks</a>
                <t t-else="">Tasks</t>
            </li>
            <li t-if="task" class="breadcrumb-item active text-truncate">
                <span t-field="task.label"/>
            </li>
        </xpath>
    </template>

    <template id="portalMyTasksPriorityWidgetTemplate" name="Priority Widget Template">
        <span t-attf-class="o-priority-star fa fa-star#{task.priority == '1' ? '' : '-o'}"/>
    </template>

    <template id="portalMyTasksStateWidgetTemplate" name="Status Widget Template">
        <span t-att-title="task.kanbanStateLabel" t-attf-class="o-status rounded-circle #{await task.kanbanState == 'done' ? 'bg-success' : await task.kanbanState == 'blocked' ? 'bg-danger' : ''}"/>
    </template>

    <template id="portalMyHome" name="Show Projects / Tasks" customizeShow="true" inheritId="portal.portalMyHome" priority="40">
        <xpath expr="//div[contains(@class, 'o-portal-docs')]" position="inside">
            <t t-call="portal.portalDocsEntry">
                <t t-set="title">Projects</t>
                <t t-set="url" t-value="'/my/projects'"/>
                <t t-set="placeholderCount" t-value="'projectCount'"/>
            </t>
            <t t-call="portal.portalDocsEntry">
                <t t-set="title">Tasks</t>
                <t t-set="url" t-value="'/my/tasks'"/>
                <t t-set="placeholderCount" t-value="'taskCount'"/>
            </t>
        </xpath>
    </template>

    <template id="portalMyProjects" name="My Projects">
        <t t-call="portal.portalLayout">
            <t t-set="breadcrumbsSearchbar" t-value="true"/>

            <t t-call="portal.portalSearchbar">
                <t t-set="title">Projects</t>
            </t>
            <t t-if="!bool(projects)">
                <div class="alert alert-warning mt8" role="alert">
                    There are no projects.
                </div>
            </t>
            <t t-if="projects" t-call="portal.portalTable">
                <tbody>
                    <tr t-foreach="projects" t-as="project">
                        <td>
                            <a t-attf-href="/my/project/#{project.id}?{{ keepQuery() }}"><span t-field="project.label"/></a>
                        </td>
                        <td class="text-right">
                            <t t-out="project.taskCountWithSubtasks" />
                            <t t-out="project.labelTasks" />
                        </td>
                    </tr>
                </tbody>
            </t>
        </t>
    </template>

    <template id="portalMyProject" name="My Project">
        <t t-call="portal.portalLayout">
            <t t-set="oPortalFullwidthAlert" groups="project.groupProjectUser">
                <t t-call="portal.portalBackInEditMode">
                    <t t-set="backendUrl" t-value="format('/web#model=project.project&amp;id=%s&amp;viewType=kanban',project.id)"/>
                </t>
            </t>

            <t t-call="portal.portalSearchbar">
                <t t-set="title">Tasks</t>
            </t>
            <t t-if="!bool(groupedTasks)">
                <div class="alert alert-warning mt8" role="alert">
                    There are no tasks.
                </div>
            </t>

            <t t-call="project.portalTasksList"/>
        </t>
    </template>

    <template id="portalTasksList" name="Tasks List">
        <t t-if="groupedTasks">
            <t t-call="portal.portalTable">
                <t t-foreach="groupedTasks" t-as="tasks">
                    <t t-set="sudo0" t-value="await tasks[0].sudo()"/>
                    <t t-set="sudoProject" t-value="await sudo0.projectId"/>
                    <thead>
                        <tr t-attf-class="{{groupby !== 'none' ? 'thead-light' : ''}}">
                            <th class="text-left">Ref</th>
                            <th t-if="groupby != 'priority'">Priority</th>
                            <th t-if="groupby == 'none'">Name</th>
                            <th t-if="groupby == 'project'">
                                <em class="font-weight-normal text-muted"><span t-field="await sudoProject.labelTasks"/> for project:</em>
                                <span t-field="await sudoProject.label"/></th>
                            <th t-if="groupby == 'stage'">
                                <em class="font-weight-normal text-muted"><span t-field="await sudoProject.labelTasks"/> in stage:</em>
                                <span class="text-truncate" t-field="sudo0.stageId.label"/></th>
                            <th t-if="groupby == 'priority'">
                                <em class="font-weight-normal text-muted"><span t-field="await sudoProject.labelTasks"/> in priority:</em>
                                <span class="text-truncate" t-field="sudo0.priority"/></th>
                            <th t-if="groupby == 'status'">
                                <em class="font-weight-normal text-muted"><span t-field="await sudoProject.labelTasks"/> in status:</em>
                                <span class="text-truncate" t-field="sudo0.kanbanState"/></th>
                            <th t-if="groupby == 'customer'">
                                <em class="font-weight-normal text-muted" t-if="(await sudo0.partnerId).ok"><span t-field="await sudoProject.labelTasks"/> for customer:</em>
                                <span class="text-truncate" t-field="sudo0.partnerId.label"/></th>
                            <th name="projectPortalAssignees">Assignees</th>
                            <th t-if="groupby != 'status'">Status</th>
                            <th t-if="groupby != 'project'">Project</th>
                            <th t-if="groupby != 'stage'">Stage</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="tasks" t-as="task">
                            <tr>
                                <td class="text-left">
                                    #<span t-esc="task.id"/>
                                </td>
                                <td t-if="groupby != 'priority'">
                                    <t t-call="project.portalMyTasksPriorityWidgetTemplate"/>
                                </td>
                                <td>
                                    <a t-attf-href="/my/#{taskUrl}/#{task.id}?{{ keepQuery() }}"><span t-field="task.label"/></a>
                                </td>
                                <td name="projectPortalAssignees">
                                    <t t-set="assignees" t-value="await (await task.sudo()).userIds"/>
                                    <span t-if="assignees.ok" t-out="format('%s%s', await assignees.slice(0,1).label, len(await assignees.userIds) > 1 ? format(' + %s others', len(assignees.slice(1,))) : '')" t-att-title="(await assignees.slice(1,).mapped('label')).join('\n')"/>
                                </td>
                                <td t-if="groupby != 'status'">
                                    <t t-call="project.portalMyTasksStateWidgetTemplate">
                                        <t t-set="path" t-value="'tasks'"/>
                                    </t>
                                </td>
                                <td t-if="groupby != 'project'">
                                    <span class="badge badge-pill badge-info mw-100 text-truncate" title="Current project of the task" t-esc="await (await task.projectId).label" />
                                </td>
                                <td t-if="groupby != 'stage'">
                                    <span class="badge badge-pill badge-info" title="Current stage of the task" t-esc="await (await task.stageId).label" />
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </t>
            </t>
        </t>
    </template>

    <template id="portalMyTasks" name="My Tasks">
        <t t-call="portal.portalLayout">
            <t t-set="breadcrumbsSearchbar" t-value="true"/>

            <t t-call="portal.portalSearchbar">
                <t t-set="title">Tasks</t>
            </t>
            <t t-if="!groupedTasks.ok">
                <div class="alert alert-warning mt8" role="alert">
                    There are no tasks.
                </div>
            </t>
            <t t-call="project.portalTasksList"/>
        </t>
    </template>

    <template id="portalMyTask" name="My Task">
        <t t-call="portal.portalLayout">
            <t t-set="oPortalFullwidthAlert" groups="project.groupProjectUser">
                <t t-call="portal.portalBackInEditMode">
                    <t t-set="backendUrl" t-value="format('/web#model=project.task&amp;id=%s&amp;viewType=form',task.id)"/>
                </t>
            </t>

            <t t-call="portal.portalRecordLayout">
                <t t-set="cardHeader">
                    <div class="row no-gutters">
                        <div class="col-12">
                            <h5 class="d-flex mb-1 mb-md-0 row">
                                <div class="col-9">
                                    <t t-call="project.portalMyTasksPriorityWidgetTemplate"/>
                                    <span t-field="task.label" class="text-truncate"/>
                                    <small class="text-muted d-none d-md-inline"> (#<span t-field="task.id"/>)</small>
                                </div>
                                <div class="col-3 text-right">
                                    <small class="text-right">Stage:</small>
                                    <span t-field="task.stageId.label" class=" badge badge-pill badge-info" title="Current stage of this task"/>
                                </div>
                            </h5>
                        </div>
                    </div>
                </t>
                <t t-set="cardBody">
                    <div class="float-right">
                        <t t-call="project.portalMyTasksStateWidgetTemplate">
                            <t t-set="path" t-value="'task'"/>
                        </t>
                    </div>
                    <div class="row mt-3" t-if="(await task.userIds).ok || (await task.partnerId).ok">
                        <div class="col-12 col-md-6 pb-2" t-if="(await task.userIds).ok">
                            <strong>Assignees</strong>
                            <div class="row">
                                <t t-foreach="await task.userIds" t-as="user">
                                    <div class="col d-flex align-items-center flex-grow-0 pr-3">
                                        <img class="rounded-circle mt-1 o-portal-contact-img" t-att-src="imageDataUri(await user.avatar1024)" alt="Contact"/>
                                    </div>
                                    <div class="col pl-md-0">
                                        <div t-esc="user" t-options='{"widget": "contact", "fields": ["label"]}'/>
                                        <a t-attf-href="mailto:{{await user.email}}" t-if="await user.email"><div t-esc="user" t-options='{"widget": "contact", "fields": ["email"]}'/></a>
                                        <a t-attf-href="tel:{{await user.phone}}" t-if="await user.phone"><div t-esc="user" t-options='{"widget": "contact", "fields": ["phone"]}'/></a>
                                    </div>
                                </t>
                            </div>
                        </div>
                        <t t-set="taskPartner" t-value="await task.partnerId"/>
                        <div class="col-12 col-md-6 pb-2" t-if="taskPartner.ok">
                            <strong>Customer</strong>
                            <div class="row">
                                <div class="col d-flex align-items-center flex-grow-0 pr-3">
                                    <img class="rounded-circle mt-1 o-portal-contact-img" t-att-src="imageDataUri(await taskPartner.avatar1024)" alt="Contact"/>
                                </div>
                                <div class="col pl-md-0">
                                    <div t-field="task.partnerId" t-options='{"widget": "contact", "fields": ["label"]}'/>
                                    <a t-attf-href="mailto:{{await taskPartner.email}}" t-if="await taskPartner.email"><div t-field="task.partnerId" t-options='{"widget": "contact", "fields": ["email"]}'/></a>
                                    <a t-attf-href="tel:{{await taskPartner.phone}}" t-if="await taskPartner.phone"><div t-field="task.partnerId" t-options='{"widget": "contact", "fields": ["phone"]}'/></a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-12 col-md-6">
                            <div t-if="projectAccessible"><strong>Project:</strong> <a t-attf-href="/my/project/#{(await task.projectId).id}" t-field="task.projectId"/></div>
                            <div t-else=""><strong>Project:</strong> <a t-field="task.projectId"/></div>
                            <div t-if="await task.dateDeadline"><strong>Deadline:</strong> <span t-field="task.dateDeadline" t-options='{"widget": "date"}'/></div>
                            <div name="portalMyTaskPlannedHours">
                                <t t-call="project.portalMyTaskPlannedHoursTemplate"/>
                            </div>
                        </div>
                        <div class="col-12 col-md-6" name="portalMyTaskSecondColumn"></div>
                    </div>

                    <div class="row" t-if="await task.description || (await task.attachmentIds).ok">
                        <div t-if="task.description" t-attf-class="col-12 col-lg-7 mb-4 mb-md-0 {{(await task.attachmentIds).ok ? 'col-lg-7' : 'col-lg-12'}}">
                            <hr class="mb-1"/>
                            <div class="d-flex my-2">
                                <strong>Description</strong>
                            </div>
                            <div class="py-1 px-2 bg-100 small" t-field="task.description"/>
                        </div>
                        <div t-if="(await task.attachmentIds).ok" t-attf-class="col-12 col-lg-5 o-project-portal-attachments {{await task.description ? 'col-lg-5' : 'col-lg-12'}}">
                            <hr class="mb-1 d-none d-lg-block"/>
                            <strong class="d-block mb-2">Attachments</strong>
                            <div class="row">
                                <div t-attf-class="col {{!await task.description ? 'col-lg-6' : 'col-lg-12'}}">
                                    <ul class="list-group">
                                        <a class="list-group-item list-group-item-action d-flex align-items-center oe-attachments py-1 px-2" t-foreach='await task.attachmentIds' t-as='attachment' t-attf-href="/web/content/#{attachment.id}?download=true&amp;accessToken=#{await attachment.accessToken}" target="_blank" data-no-post-process="">
                                            <div class='oe-attachment-embedded o-image o-image-small mr-2 mr-lg-3' t-att-title="await attachment.label" t-att-data-mimetype="await attachment.mimetype" t-attf-data-src="/web/image/#{attachment.id}/50x40?accessToken=#{await attachment.accessToken}"/>
                                            <div class='oe-attachment-name text-truncate'><t t-esc='await attachment.label'/></div>
                                        </a>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>

            <div class="mt32">
                <h4><strong>Message and communication history</strong></h4>
                <t t-call="portal.messageThread">
                    <t t-set="object" t-value="task"/>
                    <t t-set="token" t-value="await task.accessToken"/>
                    <t t-set="pid" t-value="pid"/>
                    <t t-set="hash" t-value="hash"/>
                </t>
            </div>
        </t>
    </template>

    <template id="portalMyTaskPlannedHoursTemplate">
        <strong>Planned Hours:</strong> <span t-esc="await task.plannedHours" t-options='{"widget": "floatTime"}'/>
    </template>
</verp>
