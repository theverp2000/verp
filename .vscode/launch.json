{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Server",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "args": [
        "${workspaceFolder}/src/index",
        // "-i", "mail",
      ]
    },
    {
      "name": "Start",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "args": [
        "${workspaceFolder}/src/index",
        "start",
        "-r",
        "-i", "base",
      ],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**/*.js",
        "${workspaceFolder}/**/*.ts",
        "!**/node_modules/**"
      ],
    },
    {
      "name": "Deploy",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "args": [
        "${workspaceFolder}/src/index.ts",
        "deploy"
      ]
    },
    {
      "name": "Shell",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "args": [
        "${workspaceFolder}/src/index.ts",
        "shell",
        "--umber-abc=100",
        "--http-port=8888" 
      ]
    },
    {
      "name": "Test",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "args": [
        "${workspaceFolder}/src/test/test_rrule",
      ]
    },
    {
      "name": "TestJS",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
      ],
      "args": [
        "${workspaceFolder}/src/test/test_worker/index.js"
      ]
    }
  ],
}
